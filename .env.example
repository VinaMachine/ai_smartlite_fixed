# AI SmartLite Environment Configuration

# Vault Configuration
VAULT_TOKEN=dev-token-change-in-production

# TURN/STUN Configuration
TURN_SERVER_URL=turn:turn.example.com:3478
TURN_USERNAME=smartlite
TURN_CREDENTIAL=change-this-password
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Secret Rotation
ROTATION_INTERVAL=2592000

# TLS/mTLS Configuration
TLS_ENABLED=true
MTLS_ENABLED=true
CERT_PATH=./certs

# Observability
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOKI_ENABLED=true

# Chaos Testing
CHAOS_ENABLED=false

# Registry Mirror
REGISTRY_MIRROR_US=localhost:5001
REGISTRY_MIRROR_EU=localhost:5002
REGISTRY_MIRROR_ASIA=localhost:5003

# JWT Configuration
JWT_ROTATION_INTERVAL=86400
JWT_ALGORITHM=RS256

# Service Limits
MAX_CONCURRENT_SESSIONS=80
MAX_ASR_STREAMS=60
MAX_LLM_CONCURRENT=8
MAX_TTS_CONCURRENT=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
AUDIT_LOG_RETENTION_DAYS=365
