{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "event",
        "session_id",
        "seq",
        "ts",
        "pcm",
        "sample_rate"
    ],
    "properties": {
        "event": {
            "const": "audio_chunk"
        },
        "session_id": {
            "type": "string"
        },
        "seq": {
            "type": "integer"
        },
        "ts": {
            "type": "number"
        },
        "pcm": {
            "type": "string"
        },
        "sample_rate": {
            "type": "integer",
            "enum": [
                16000,
                48000
            ]
        }
    }
}