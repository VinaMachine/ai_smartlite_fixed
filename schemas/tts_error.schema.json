{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "event",
        "session_id",
        "payload"
    ],
    "properties": {
        "event": {
            "const": "tts_error"
        },
        "session_id": {
            "type": "string"
        },
        "payload": {
            "type": "object",
            "required": [
                "reason",
                "fallback_text",
                "severity",
                "seq"
            ],
            "properties": {
                "reason": {
                    "type": "string"
                },
                "fallback_text": {
                    "type": "string"
                },
                "severity": {
                    "enum": [
                        "warn",
                        "error",
                        "critical"
                    ]
                },
                "seq": {
                    "type": "integer"
                }
            }
        }
    }
}